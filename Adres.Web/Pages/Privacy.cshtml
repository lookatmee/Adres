@page
@model PrivacyModel
@{
    ViewData["Title"] = "Acerca del Desarrollador";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-primary mb-4">
                        <i class="fas fa-user-circle"></i> Perfil Profesional
                    </h1>
                    
                    <div class="mb-4">
                        <h2 class="h4 text-secondary">Información Personal</h2>
                        <p class="lead">Ing. Adolfo Jinete Arriola</p>
                        <p>Ingeniero de Sistemas con 17 años de experiencia en desarrollo de aplicaciones .NET</p>
                    </div>

                    <div class="mb-4">
                        <h3 class="h4 text-secondary">Experiencia y Especialización</h3>
                        <p>Especialista en desarrollo de aplicaciones empresariales con amplia experiencia tanto en backend como frontend.</p>
                    </div>

                    <div class="mb-4">
                        <h3 class="h4 text-secondary">Tecnologías y Habilidades</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="h5">Lenguajes y Frameworks</h4>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success"></i> C# .NET</li>
                                    <li><i class="fas fa-check text-success"></i> ASP.NET Core</li>
                                    <li><i class="fas fa-check text-success"></i> MVC</li>
                                    <li><i class="fas fa-check text-success"></i> Razor Pages</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h4 class="h5">Bases de Datos</h4>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-database text-primary"></i> SQL Server</li>
                                    <li><i class="fas fa-database text-primary"></i> Oracle</li>
                                    <li><i class="fas fa-database text-primary"></i> MySQL</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h3 class="h4 text-secondary">Certificaciones y Metodologías</h3>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-certificate text-warning"></i> Scrum Fundamental V4</li>
                            <li><i class="fas fa-check-circle text-success"></i> Clean Architecture</li>
                            <li><i class="fas fa-check-circle text-success"></i> Principios SOLID</li>
                        </ul>
                    </div>

                    <div class="mb-4">
                        <h3 class="h4 text-secondary">Herramientas y Tecnologías Adicionales</h3>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-primary">Git</span>
                            <span class="badge bg-info">Docker</span>
                            <span class="badge bg-success">RabbitMQ</span>
                            <span class="badge bg-warning text-dark">.NET Core</span>
                            <span class="badge bg-danger">Clean Architecture</span>
                            <span class="badge bg-secondary">SOLID</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
