@page "{id:int}"
@model Adres.Web.Pages.Unidades.EditModel
@{
    ViewData["Title"] = "Editar Unidad Administrativa";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-adres-primary"><i class="fas fa-building"></i> Editar Unidad Administrativa</h1>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-adres">
            <div class="card-body">
                <form method="post" id="editForm" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Unidad.Id" />
                    <div class="mb-3">
                        <label asp-for="Unidad.Nombre" class="form-label">Nombre</label>
                        <input asp-for="Unidad.Nombre" class="form-control form-control-adres" required />
                        <span asp-validation-for="Unidad.Nombre" class="text-danger"></span>
                        <div class="invalid-feedback">
                            El nombre es requerido.
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-adres-primary">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#editForm').on('submit', function(event) {
                if (!validateForm('editForm')) {
                    event.preventDefault();
                    event.stopPropagation();
                }
            });
        });
    </script>
} 