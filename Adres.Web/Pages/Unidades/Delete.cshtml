@page "{id:int}"
@model Adres.Web.Pages.Unidades.DeleteModel
@{
    ViewData["Title"] = "Eliminar Unidad Administrativa";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-adres-primary"><i class="fas fa-building"></i> Eliminar Unidad Administrativa</h1>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card card-adres">
            <div class="card-body">
                <h5 class="card-title">¿Está seguro de que desea eliminar esta unidad administrativa?</h5>
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input class="form-control form-control-adres" value="@Model.Unidad.Nombre" readonly />
                </div>
                <form method="post">
                    <input type="hidden" asp-for="Unidad.Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 