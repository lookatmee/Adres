@page "{id:int}"
@model Adres.Web.Pages.Documentacion.DetailsModel
@{
    ViewData["Title"] = "Detalles del Documento";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-adres-primary"><i class="fas fa-file-alt"></i> Detalles del Documento</h1>
    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Volver
    </a>
</div>

<div class="card card-adres">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento.AdquisicionId)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento.AdquisicionId)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento.TipoDocumento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento.TipoDocumento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento.NumeroDocumento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento.NumeroDocumento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento.FechaDocumento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento.FechaDocumento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Documento.Observaciones)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento.Observaciones)</dd>

            <dt class="col-sm-3">Fecha de Creación</dt>
            <dd class="col-sm-9">@Model.Documento.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Creado Por</dt>
            <dd class="col-sm-9">@Model.Documento.CreadoPor</dd>

            @if (Model.Documento.FechaModificacion.HasValue)
            {
                <dt class="col-sm-3">Fecha de Modificación</dt>
                <dd class="col-sm-9">@Model.Documento.FechaModificacion.Value.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Modificado Por</dt>
                <dd class="col-sm-9">@Model.Documento.ModificadoPor</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Documento.Id" class="btn btn-adres-primary">
        <i class="fas fa-edit"></i> Editar
    </a>
</div> 