@page "{id:int}"
@model Adres.Web.Pages.Proveedores.DeleteModel
@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<div class="container-fluid px-4">
    <h2 class="mt-4">@ViewData["Title"]</h2>

    <div class="card mb-4">
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                ¿Está seguro de que desea eliminar el proveedor "@Model.Proveedor.Nombre"?
            </div>

            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Proveedor.Nombre)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Proveedor.Nombre)</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Proveedor.Id" />
                <div class="mb-3">
                    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div> 