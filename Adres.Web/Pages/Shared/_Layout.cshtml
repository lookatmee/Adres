<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADRES</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Adres.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.png" alt="ADRES" height="40" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Adquisiciones/Index">
                                <i class="fas fa-shopping-cart"></i> Adquisiciones
                            </a>
                        </li>
                        <li class="nav-item separator">|</li>
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Unidades/Index">
                                <i class="fas fa-building"></i> Unidades
                            </a>
                        </li>
                        <li class="nav-item separator">|</li>
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Tipos/Index">
                                <i class="fas fa-tags"></i> Tipos
                            </a>
                        </li>
                        <li class="nav-item separator">|</li>
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Proveedores/Index">
                                <i class="fas fa-truck"></i> Proveedores
                            </a>
                        </li>
                        <li class="nav-item separator">|</li>
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Documentacion/Index">
                                <i class="fas fa-file-alt"></i> Documentos
                            </a>
                        </li>
                        <li class="nav-item separator">|</li>
                        <li class="nav-item">
                            <a class="nav-link text-adres-primary" asp-page="/Historial/Index">
                                <i class="fas fa-history"></i> Historial
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-adres">
        <div class="container">
            &copy; 2025 - ADRES - <a asp-page="/Privacy">Acerca del Desarrollador</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .navbar-nav .separator {
            display: flex;
            align-items: center;
            color: var(--adres-primary);
            padding: 0 0.5rem;
            opacity: 0.5;
        }
    </style>
</body>
</html>
